{
  "name": "teletherapy-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "web-nextjs",
    "web-react", 
    "mobile",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web-nextjs\" \"npm run dev:web-react\" \"npm run dev:mobile\"",
    "dev:web-nextjs": "cd web-nextjs && npm run dev",
    "dev:web-react": "cd web-react && npm run dev", 
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm run build:web-nextjs && npm run build:web-react && npm run build:mobile",
    "build:web-nextjs": "cd web-nextjs && npm run build",
    "build:web-react": "cd web-react && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "lint": "npm run lint:web-nextjs && npm run lint:web-react && npm run lint:mobile",
    "lint:web-nextjs": "cd web-nextjs && npm run lint",
    "lint:web-react": "cd web-react && npm run lint",
    "lint:mobile": "cd mobile && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}